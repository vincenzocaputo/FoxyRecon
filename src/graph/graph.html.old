<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="graph.css">
        <title>FoxyRecon Graph</title>
        <script src="../lib/d3.v7.min.js"></script>
    </head>
    <body>
        <div id="header-pane">
            <img src="../../assets/icons/foxyrecon-icon-48.png"/>
            <div>Graph</div>
        </div>
        <div id="option-palette">
            <div id="settings-button">
                <img src="../../assets/icons/settings.png" title="Settings"/>
            </div>
        </div>
        <div id="pane-container">
            <div id="settings-pane">
                <div id="options-container">
                    <div>
                        <span>Charge</span>
                        <input id="charge-slider" type="range" min="0" max="100" value="0">
                    </div>
                    <div>
                        <span>Distance</span>
                        <input id="distance-slider" type="range" min="0" max="100" value="50">
                    </div>
                    <div>
                        <span>Show Node Labels</span>
                        <div>
                            <label class="switch">
                                <input type="checkbox" id="show-node-labels-checkbox"/>
                                <span class="slider"></span>
                            </label>
                        </div>
                    </div>
                    <div>
                        <span>Show Edge Labels</span>
                        <div>
                            <label class="switch">
                                <input type="checkbox" id="show-link-labels-checkbox"/>
                                <span class="slider"></span>
                            </label>
                        </div>
                    </div>
                    <div>
                        <button class="button" id="delete-button">Delete Graph</button>
                    </div>
                </div>
                <div id="node-detail">
                    <div>
                        <span>Indicator</span>
                        <input id="node-id" disabled>
                    </div>
                    <div>
                        <span>Type</span>
                        <input id="node-type" disabled>
                    </div>
                    <div>
                        <button class="button" id="analyze-button">Analyze</button>
                    </div>

                </div>
            </div>
            <div id="graph-pane">
            </div>
        </div>
        <script src="../utils/graph.js"></script>
        <script src="graph.js"></script>
    </body>
</html>
